<%= form_for @author do |f| %>
<!--Check for errors -->
<% if @author.errors.any? %>
<% @author.errors.full_messages.each do |msg| %>
<!-- Show errors -->
<div class="alert alert-danger"><%= msg %></div>
<% end %>
<% end %>

<div class="form-group">
<%= f.label :first_name %>
<%= f.text_field :fname, class: 'form-control' %>
</div>
<div class="form-group">
<%= f.label :last_name %>
<%= f.text_field :lname, class: 'form-control' %>
</div>

<div class="form-group">
<%= f.label :authorpath %>
<%= f.text_field :authorpath, class: 'form-control' %>
</div>

<div class="form-group">
<%= f.label :category %>
<%= f.select :category_id, Category.all.collect{|x| [x.name, x.id]}, {:include_blank => 'Select one'},  class: 'form-control' %>
</div>

<div class="form-group">
<%= f.label :country %>
<%= f.select :country_id, Country.all.collect{|x| [x.name, x.id]}, {:include_blank => 'Select one'},  class: 'form-control' %>
</div>

<div class="form-group">
<%= f.label :description %>
<%= f.text_area :description, class: 'form-control' %>
</div>

<%= f.submit 'Submit', class: 'btn btn-primary' %>
<%= link_to 'Cancel', authors_path, class: 'btn btn-default' %>

<% end %>