
<h2 class="inline-form">Authors <span class="badge badge-info"><%= @authors.count %></span></h2>
<a class="btn btn-primary btn-lg inline-form float-right" href="/authors/new" role="button">New</a>

<%= form_tag(authors_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Author" %>
<%= submit_tag "Search", :name => nil %>
<% end %>
<br>

<table class="table table-hover">
	<tr>
		<th>Author</th>
		<th>Image</th>
		<th>Category</th>
		<th>Country</th>
		<th>Books</th>
		<th>Actions</th>
	</tr>
	<% @authors.each do |author| %>
		<tr>
			<td><%= author.fname %> <%= author.lname %></td>
			<td><%= image_tag author.image_url(:thumb).to_s %></td>
			<td><%= author.category.name %></td>
			<td><%= author.country.name %></td>
			<td><%= author.books.count %></td>
			<td> <%= link_to "Show", author_path(author) %> | <%= link_to "Edit", edit_author_path(author) %> | <%= link_to "Delete", author_path(author), method: :delete, data: {confirm: 'Are you sure'} %> </td>

		</tr>
	<% end %>
</table>
