<div class="review">

<div class="review-rating" data-score="<%= review.rating %>"></div>
<p class="review-comment"><%= review.comment %></p>

<% if user_signed_in? %>
<% if review.user_id == current_user.id %>

<div class="link btn-group">
<%= link_to "Edit", edit_book_review_path(review.book, review), class: "btn btn-info" %>
<%= link_to "Delete", book_review_path(review.book, review), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
</div>
<% end %>
<% end %>

</div>