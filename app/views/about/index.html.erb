<div class="container">
	<header>
		<div class="bgimg">

			<h1>World of Books</h1>
			<h2 class="text-center">Books <span class="badge badge-info"><%= @books.count %></span></h2>
			
			<h3 class="text-center text-white">return <span class="badge badge-danger"><%= @books3 %></span></h3>
		</div>
	</header>
	<br>
	
	<h2 class="section-title-home">
		<div class="section-title-home-content">
			Our Favorites
		</div>
	</h2>	
		
	<div class="row">
		<% @books1.each do |book| %>
		

		<div class="col-md-3">
			<div class="card-deck">
				<div class="card">
					<a href="/books/<%= book.id %>">
						<%= image_tag (book.coverpath), class: "book img-fluid card-img-top" %>
					
						<p class="card-text text-center"><%= book.title %></p>
						<p class="card-text text-center"><%= book.reader %></p>
						
					</a>
				<div class="card-footer">
      <small class="text-muted"><%= time_ago_in_words(book.created_at) %> ago</small>
    </div>
				</div>
			</div>
		</div>
		<% end %>

</div>
