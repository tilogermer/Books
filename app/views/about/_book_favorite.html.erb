<h2 class="section-title-home">
		<div class="section-title-home-content">
			<i class="mdi mdi-library"> Our Favorites </i>
		</div>
	</h2>
<div class="row">
		<% @readers.each do |reader| %>
		<% @books1.each do |book| %>
		
		<% if reader.id === book.reader_id && book.isFavorite  %>
		
		<div class="col-md-3">
			<div class="card-deck">
				<div class="card favorite">
					<a href="/books/<%= book.id %>">
						<%= image_tag book.image_url.to_s, class: " img-fluid card-img-top" %>
						
						<div class="bg-light">
							<a href="/readers/<%= reader.id %>">
								<div class="card-img-overlay">
									<%= image_tag (book.reader.readerpath), class: "avatar" %>
								</div>
								
								

							</div>
							
							<% unless params[:tag] %>
							<div class="bg-light-center">
								<ul class="list-inline list-unstyled">
									<% book.tags.each do |tag| %>
									<li class="list-inline-item badge badge-info text-center"> <%= tag.name %></li>
									<% end %>
								</ul>
							</div>
							<% end %>
						</a>
					</a>
					<div class="card-text">
						<p class="card-text text-center flex-item"grow"><%= book.title %></p>
					</div>
					<span class="badge badge-purple" style="border-radius: 0;" ><%= reader.name %> <%= reader.books.where(:isReturned => false).count %> books</span>					

					<div class="card-footer">
						<small class="text-muted"><%= time_ago_in_words(book.created_at) %> ago</small>
					</div>
				</div>
			</div>
		</div>
		<% end %>
		<% end %>
		<% end %>

	</div>