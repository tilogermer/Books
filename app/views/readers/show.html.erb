
	<div class="row">
		<div class="col-md-4">
			<%= image_tag (@reader.readerpath), class: "img-fluid" %>
		</div>

		<div class="col-md-8">
			<div class="book-info">
				
				<h5 class="section-title-home">
					<div class="section-title-home-content">
						<i class="mdi mdi-account"></i>
					<%= @reader.name %></div></h5>

				
				<p class="book-description"><%= @reader.description %></p>
				
				<div class="links btn-group">
					<%= link_to "Back", readers_path, class: "btn btn-custom" %>

					<%= link_to "Edit", edit_reader_path, class: "btn btn-custom" %>
					<%= link_to "Delete", reader_path(@reader), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-custom" %>

				</div>
			</div>
		</div>
	</div>
	
	<h2 class="section-title-home">
		<div class="section-title-home-content">
			My Books
		</div>
	</h2>	
	<div class="row">
		<% @books.each do |book| %>
		

		<div class="col-md-3 col-xl-2 col-6">
			<div class="card-deck">
				<div class="card">
					<a href="/books/<%= book.id %>">
						<%= image_tag (book.coverpath), class: "img-fluid card-img-top" %>
						<div class="bg-light">
						<%= image_tag (book.reader.readerpath), class: "avatar-small" %>
						<% unless params[:tag] %>
						<p class="badge badge-info text-center"><%= book.tag %></p>
						<% end %>
						</div>
						</a>
						<div class="card-text">
						<p class="card-text text-center flex-item"grow"><%= book.title %></p>
						</div>
					
				<div class="card-footer text-center">
      <small class="text-muted"><%= remove_unwanted_words time_ago_in_words(book.created_at) %> ago</small>
    </div>
				</div>
			</div>
		</div>
		<% end %>

	</div>








