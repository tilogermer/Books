<%= form_for @reader do |f| %>
<!--Check for errors -->
<% if @reader.errors.any? %>
<% @reader.errors.full_messages.each do |msg| %>
<!-- Show errors -->
<div class="alert alert-danger"><%= msg %></div>
<% end %>
<% end %>
 
<div class="form-group row">
<%= f.label :name, class: "col-sm-2 col-form-label" %>
<div class="col-sm-10">
<%= f.text_field :name, class: 'form-control' %><br />
</div>
</div>
<div class="form-group row">
<%= f.label :description, class: "col-sm-2 col-form-label" %>
<div class="col-sm-10">
<%= f.text_field :description, class: 'form-control' %><br />
</div>
</div>

<div class="form-group row">
<%= f.label :readerpath, class: "col-sm-2 col-form-label" %>
<div class="col-sm-10">
<%= f.text_field :readerpath, class: 'form-control' %><br />
</div>
</div>
<%= f.submit 'Submit', class: 'btn btn-primary' %>
<%= link_to 'Cancel', readers_path, class: 'btn btn-default' %>

<% end %>