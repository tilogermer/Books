<div class="container">
<h2 class="inline-form">Books <small class="text-muted" ><%= @books.count %></small></h2>
<a class="btn btn-primary btn-lg inline-form float-right" href="/books/new" role="button">New</a>

<table class="table table-striped">
	<tr>
		<th>Book Title</th>
		<th>Medium</th>
		<th>Return Date</th>
		<th>Actions</th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.medium.name %></td>
			<td><%= book.return_date %></td>
			
			<td> <%= link_to "Show", book_path(book.id) %> | <%= link_to "Edit", edit_book_path(book.id) %> | <%= link_to "Delete", book_path(book), method: :delete, data: {confirm: 'Are you sure'} %> </td>

		</tr>
	<% end %>
</table>
</div>